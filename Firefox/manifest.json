{
  "manifest_version": 2,
  "name": "No More Mobile",
  "description": "Redirects mobile pages to classic (desktop) pages",
  "version": "1.0",
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "applications": {
    "gecko": {
      "id": "{60798ea0-5205-4e4e-8723-19467df02a09}",
      "strict_min_version": "42.0"
    }
  },
  "background":
  {
    "scripts": ["background.js"]
  },
  "icons":
  {
    "128": "icon.png"
  },
  "permissions":
  [
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*",
    "storage"
  ]
}